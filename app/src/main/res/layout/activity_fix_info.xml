<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">

    <RelativeLayout
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/goSelectAct"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumsquareb"
            android:text="내 정보"
            android:textColor="#050505"
            android:textSize="15dp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/reservecheckbtn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/titlelayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/select_box" />

    <ImageButton
        android:id="@+id/changePw"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/reservecheckbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/select_box" />
    <ImageButton
        android:id="@+id/otpReissue"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/changePw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/select_box"/>
    <ImageButton
        android:id="@+id/delete_account"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/otpReissue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/select_box"/>


</RelativeLayout>