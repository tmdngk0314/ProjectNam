<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    >

    <RelativeLayout
        android:id="@+id/backgroundRela"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="#efefef">

        <LinearLayout
            android:id="@+id/firstLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/LockernumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="5"
                android:textColor="#000000"
                android:textSize="60dp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/LockernumText"
                android:text="번 사물함을"
                android:textColor="#000000"
                android:textSize="45dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstLinear"
            android:layout_marginLeft="10dp"
            android:text="이용하세요"
            android:textColor="#000000"
            android:textSize="45dp" />


        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="이용날짜  - "
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/usedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/text3"
            android:text="2022.04.06"
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/usedate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usedate"
            android:layout_alignRight="@+id/usedate"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="~2022.04.12"
            android:textColor="#000000"
            android:textSize="30dp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/nextBtn"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@id/usedate2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/ok" />

    </RelativeLayout>
</RelativeLayout>