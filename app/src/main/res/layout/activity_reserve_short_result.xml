<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    >

    <RelativeLayout
        android:id="@+id/backgroundRela"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:background="#efefef">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="예약이 완료되었습니다"
            android:textColor="#000000"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="지역  -  "
            android:textColor="#000000"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/text2"
            android:text="성결대학교 오전동 학의로48"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_location"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="사물함 이름  - "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_lockername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_location"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/text5"
            android:text="블루밍 사물함"
            android:textColor="#000000"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="이용날짜  -    "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/usedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/text3"
            android:text="2022.04.06"
            android:textColor="#000000"
            android:textSize="20dp" />


        <ImageButton
            android:id="@+id/nextBtn"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@id/usedate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/ok" />

    </RelativeLayout>
</RelativeLayout>