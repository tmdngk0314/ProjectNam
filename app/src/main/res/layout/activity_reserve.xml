<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">

    <RelativeLayout
        android:id="@+id/firstRela"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="#ffffff">

        <ImageButton
            android:id="@+id/imgBtnLogout"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumsquareb"
            android:text="사물함 대여"
            android:textColor="#050505"
            android:textSize="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/firstLinear"
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:layout_below="@+id/firstRela"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/locker1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/del1" />

            <ImageButton
                android:id="@+id/locker2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/del2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/locker3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/del3" />

            <ImageButton
                android:id="@+id/locker4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/del4" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="240dp"
        android:layout_below="@+id/firstLinear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_gray">

        <TextView
            android:id="@+id/chooselockertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumsquareb"
            android:text="사물함 선택"
            android:textColor="#050505"
            android:textSize="28dp" />

        <ScrollView
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:layout_below="@+id/chooselockertext"
            android:layout_marginTop="25dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textloc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="첫번째 사물함"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textloc1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/textloc1"
                    android:text="1시간 56분"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textloc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textloc1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="두번째 사물함"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textloc2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textloc1_time"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/textloc2"
                    android:text="3시간 30분"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textloc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textloc2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="세번째 사물함"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textloc3_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textloc2_time"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/textloc3"
                    android:text="3시간 30분"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textloc4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textloc3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="네번째 사물함"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textloc4_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textloc3_time"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/textloc4"
                    android:text="3시간 30분"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>