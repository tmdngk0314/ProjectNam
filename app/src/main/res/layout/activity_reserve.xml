<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">

    <RelativeLayout
        android:id="@+id/firstRela"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="#ffffff">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="사물함 대여"
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:layout_below="@+id/firstRela"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:id="@+id/firstLinear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/del1" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/del2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/del3" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/del4" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="240dp"
        android:layout_below="@+id/firstLinear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_gray">

        <TextView
            android:id="@+id/chooselockertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="사물함 선택"
            android:textColor="#050505"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/textloc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chooselockertext"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="첫번째 사물함"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textloc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chooselockertext"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/textloc1"
            android:text="1시간 56분"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textloc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textloc1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="두번째 사물함"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textloc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textloc2"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textloc3"
            android:text="3시간 30분"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>





</RelativeLayout>