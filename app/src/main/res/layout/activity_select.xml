<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/colormint"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="4">

            <ImageButton
                android:id="@+id/imgBtnLogout"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/select_logout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/gmarkbo"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_intro1" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#efefef">

        <RelativeLayout
            android:id="@+id/firstRela"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_box">

            <ImageButton
                android:id="@+id/img_reserve"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/select_reser" />

            <LinearLayout
                android:id="@+id/storeLinear"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/img_reserve"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="@string/resevation"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="@string/resevationInfo"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_firstarrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/storeLinear"
                android:background="@drawable/right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/secondRela"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/firstRela"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_box">

            <ImageButton
                android:id="@+id/img_otpcheck"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/select_otp" />

            <LinearLayout
                android:id="@+id/searchLinear"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/img_otpcheck"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="@string/otpcheck"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="@string/otpcheckInfo"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_secondarrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/searchLinear"
                android:background="@drawable/right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/thirdRela"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/secondRela"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_box">

            <ImageButton
                android:id="@+id/img_myinfo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/userinfo" />

            <LinearLayout
                android:id="@+id/infoLinear"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/img_myinfo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="@string/info"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="@string/infoInfo"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_thirdarrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/infoLinear"
                android:background="@drawable/right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/forthRela"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/thirdRela"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_box">

            <ImageButton
                android:id="@+id/img_notice"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/select_notice" />

            <LinearLayout
                android:id="@+id/noticeLinear"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/img_notice"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="@string/notice"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="@string/noticeInfo"
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_fourtharrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/noticeLinear"
                android:background="@drawable/right_arrow" />

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>