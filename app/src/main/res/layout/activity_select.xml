<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:background="@color/colormint">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_marginTop="10dp"
                >

                <ImageButton
                    android:id="@+id/imgBtnLogout"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/select_logout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/gmarkbo"
                    android:text="프작남"
                    android:textColor="@color/white"
                    android:textSize="30dp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_intro"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#efefef"
        >

        <RelativeLayout
            android:id="@+id/firstRela"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_box">

            <ImageButton
                android:id="@+id/storeimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/select_reser" />

            <LinearLayout
                android:id="@+id/storeLinear"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/storeimg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="예약하기"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:fontFamily="@font/nanumsquareb"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원하는 사물함을 예약합니다."
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/storeLinear"
                android:background="@drawable/right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/secondRela"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/firstRela"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_box">

            <ImageButton
                android:id="@+id/searchimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/select_otp" />

            <LinearLayout
                android:id="@+id/searchLinear"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/searchimg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="OTP 확인하기"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:fontFamily="@font/nanumsquareb"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사물함 이용을 위한 OTP를 확인합니다."
                    android:textColor="#000000"
                    android:textSize="9dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/nanumsquareb" />
            </LinearLayout>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/searchLinear"
                android:background="@drawable/right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/thirdRela"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/secondRela"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_box">

            <ImageButton
                android:id="@+id/noticeimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/select_notice" />

            <LinearLayout
                android:id="@+id/noticeLinear"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/noticeimg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="공지사항"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:fontFamily="@font/nanumsquareb"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근 공지사항을 확인합니다."
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/nanumsquareb"/>
            </LinearLayout>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/noticeLinear"
                android:background="@drawable/right_arrow" />

        </RelativeLayout>






    </RelativeLayout>
</LinearLayout>