<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/border_gray"
    >

    <TextView
        android:id="@+id/LoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="Sign Up"
        android:textColor="#000000"
        android:textSize="45dp" />
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/LoginTitle"
        android:layout_centerHorizontal="true"
        android:id="@+id/Name"
        android:padding="5dp"
        android:background="@drawable/border_black"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/NameImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/user" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/NameImage"
            android:hint="Name *" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Name"
        android:layout_centerHorizontal="true"
        android:id="@+id/Email"
        android:padding="5dp"
        android:background="@drawable/border_black"
        android:layout_marginTop="40dp">
        <ImageView
            android:id="@+id/EmailImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/globalization" />
        <EditText
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/EmailImage"
            android:hint="Email address *" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Email"
        android:layout_centerHorizontal="true"
        android:id="@+id/Password"
        android:padding="5dp"
        android:background="@drawable/border_black"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/PasswordImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/password" />
        <EditText
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/PasswordImage"
            android:hint="Password *" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Password"
        android:layout_centerHorizontal="true"
        android:id="@+id/ConfirmPassword"
        android:padding="5dp"
        android:background="@drawable/border_black"
        android:layout_marginTop="40dp">
        <ImageView
            android:id="@+id/PasswordConfirmImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/password" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/PasswordConfirmImage"
            android:hint="Password *" />
    </RelativeLayout>

    <Button
        android:id="@+id/CAbutton"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@id/ConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/creative_account"
        android:text="Creative Account"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_below="@id/CAbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/cancel"
        android:text="Cancel"
        android:textColor="#ff0000" />
</RelativeLayout>